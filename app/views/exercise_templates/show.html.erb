<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Exercise #<%= @exercise.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/exercises" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/exercises/<%= @exercise.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit exercise
        </a>
      </div>

      <div class="col">
        <a href="/delete_exercise/<%= @exercise.id %>" class="btn btn-block btn-outline-secondary">
          Delete exercise
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Right left bool
      </dt>
      <dd>
        <%= @exercise.right_left_bool %>
      </dd>

      <dt>
        Reps bool
      </dt>
      <dd>
        <%= @exercise.reps_bool %>
      </dd>

      <dt>
        Resistance bool
      </dt>
      <dd>
        <%= @exercise.resistance_bool %>
      </dd>

      <dt>
        Duration bool
      </dt>
      <dd>
        <%= @exercise.duration_bool %>
      </dd>

      <dt>
        Work rest bool
      </dt>
      <dd>
        <%= @exercise.work_rest_bool %>
      </dd>

      <dt>
        Gif link
      </dt>
      <dd>
        <%= @exercise.gif_link %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@exercise.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@exercise.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "exercise_templates/exercise_workout_exercises" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "exercise_templates/exercise_exercise_elements" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "exercise_templates/exercise_elements" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "exercise_templates/exercise_workouts" %>
  </div>
</div>
