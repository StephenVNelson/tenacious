<%= search_form_for @q, :class => collapse_search_form, :id => "exercises_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :right_left_bool_eq, "Right left bool" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :right_left_bool_eq, "1", checked: ((params[:q] && params[:q][:right_left_bool_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :right_left_bool_eq, "0", checked: ((params[:q] && params[:q][:right_left_bool_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :right_left_bool_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :gif_link_cont, "Gif link contains" %>
    <%= f.text_field :gif_link_cont, :class => "form-control", :placeholder => "Gif link contains" %>
  </div>

  <div class="form-group">
    <%= f.label :work_rest_bool_eq, "Work rest bool" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :work_rest_bool_eq, "1", checked: ((params[:q] && params[:q][:work_rest_bool_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :work_rest_bool_eq, "0", checked: ((params[:q] && params[:q][:work_rest_bool_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :work_rest_bool_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :duration_bool_eq, "Duration bool" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :duration_bool_eq, "1", checked: ((params[:q] && params[:q][:duration_bool_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :duration_bool_eq, "0", checked: ((params[:q] && params[:q][:duration_bool_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :duration_bool_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :resistance_bool_eq, "Resistance bool" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :resistance_bool_eq, "1", checked: ((params[:q] && params[:q][:resistance_bool_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :resistance_bool_eq, "0", checked: ((params[:q] && params[:q][:resistance_bool_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :resistance_bool_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :reps_bool_eq, "Reps bool" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :reps_bool_eq, "1", checked: ((params[:q] && params[:q][:reps_bool_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :reps_bool_eq, "0", checked: ((params[:q] && params[:q][:reps_bool_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :reps_bool_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "Element Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='elementsgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :elements_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Element Created at greater than or equal to", :data => {:target => '#elementsgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#elementsgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='elementslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :elements_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Element Created at less than or equal to", :data => {:target => '#elementslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#elementslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#elementsgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#elementslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#elementsgteqcreated_atPicker').on("dp.change", function (e) {
              $('#elementslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#elementslteqcreated_atPicker').on("dp.change", function (e) {
              $('#elementsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/exercises" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#exercises_filters">
  Show filters
</a>
