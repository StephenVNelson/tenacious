<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Right left bool
        </th>

        <th>
          Reps bool
        </th>

        <th>
          Resistance bool
        </th>

        <th>
          Duration bool
        </th>

        <th>
          Work rest bool
        </th>

        <th>
          Gif link
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @exercises.each do |exercise| %>
      <tr>
        <!-- Display exercise.id start -->
        <td>
          <%= exercise.id %>
        </td>
        <!-- Display exercise.id end -->

        <!-- Display exercise.right_left_bool start -->
        <td>
          <%= exercise.right_left_bool %>
        </td>
        <!-- Display exercise.right_left_bool end -->

        <!-- Display exercise.reps_bool start -->
        <td>
          <%= exercise.reps_bool %>
        </td>
        <!-- Display exercise.reps_bool end -->

        <!-- Display exercise.resistance_bool start -->
        <td>
          <%= exercise.resistance_bool %>
        </td>
        <!-- Display exercise.resistance_bool end -->

        <!-- Display exercise.duration_bool start -->
        <td>
          <%= exercise.duration_bool %>
        </td>
        <!-- Display exercise.duration_bool end -->

        <!-- Display exercise.work_rest_bool start -->
        <td>
          <%= exercise.work_rest_bool %>
        </td>
        <!-- Display exercise.work_rest_bool end -->

        <!-- Display exercise.gif_link start -->
        <td>
          <%= exercise.gif_link %>
        </td>
        <!-- Display exercise.gif_link end -->

        <!-- Display exercise.created_at start -->
        <td>
          <%= time_ago_in_words(exercise.created_at) %> ago
        </td>
        <!-- Display exercise.created_at end -->

        <!-- Display exercise.updated_at start -->
        <td>
          <%= time_ago_in_words(exercise.updated_at) %> ago
        </td>
        <!-- Display exercise.updated_at end -->

        <td>
          <a href="/exercises/<%= exercise.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
