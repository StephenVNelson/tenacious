<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All exercises
    </h1>

    <a href="/exercises/new" class="btn btn-block btn-outline-secondary">
      Add a new exercise
    </a>
  </div>
</div>

<!-- Ransack Code start -->

