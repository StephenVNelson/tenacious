<% if @exercise.errors.any? %>
  <% @exercise.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit exercise #<%= @exercise.id %>
</h1>

<hr>

<form action="/update_exercise/<%= @exercise.id %>" method="post">

  <div class="form-check">
    <input type="hidden" value="0" name="right_left_bool">
    <input id="right_left_bool" class="form-check-input" name="right_left_bool" type="checkbox" value="1" <%= "checked" if @exercise.right_left_bool %>>
    <label for="right_left_bool" class="form-check-label">
      Right left bool
    </label>
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="reps_bool">
    <input id="reps_bool" class="form-check-input" name="reps_bool" type="checkbox" value="1" <%= "checked" if @exercise.reps_bool %>>
    <label for="reps_bool" class="form-check-label">
      Reps bool
    </label>
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="resistance_bool">
    <input id="resistance_bool" class="form-check-input" name="resistance_bool" type="checkbox" value="1" <%= "checked" if @exercise.resistance_bool %>>
    <label for="resistance_bool" class="form-check-label">
      Resistance bool
    </label>
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="duration_bool">
    <input id="duration_bool" class="form-check-input" name="duration_bool" type="checkbox" value="1" <%= "checked" if @exercise.duration_bool %>>
    <label for="duration_bool" class="form-check-label">
      Duration bool
    </label>
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="work_rest_bool">
    <input id="work_rest_bool" class="form-check-input" name="work_rest_bool" type="checkbox" value="1" <%= "checked" if @exercise.work_rest_bool %>>
    <label for="work_rest_bool" class="form-check-label">
      Work rest bool
    </label>
  </div>

  <div class="form-group">
    <label for="gif_link">
      Gif link
    </label>

    <input type="text" id="gif_link" name="gif_link" class="form-control" value="<%= @exercise.gif_link %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update exercise
  </button>
</form>

<hr>

<a href="/exercises">
  Go back
</a>
