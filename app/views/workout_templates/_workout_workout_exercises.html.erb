<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Workout Exercises

    <a data-toggle="collapse" href="#workout_workout_exercises_new_form">
      Add workout exercise
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @workout.workout_exercises.each do |workout_exercise| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/workout_exercises/<%= workout_exercise.id %>">
          <%= workout_exercise.workout_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_workout_exercise_from_workout/<%= workout_exercise.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="workout_workout_exercises_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "workout_templates/workout_workout_exercises_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
