<h1>
  Add a new workout
</h1>


<hr>

<form action="/create_workout" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @workout.user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="client_id">
      Client
    </label>

    <%= select_tag(:client_id, options_from_collection_for_select(Client.all, :id, :name, @workout.client_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="scheduled_date">
      Scheduled date
    </label>

    <input type="text" id="scheduled_date" name="scheduled_date" class="form-control">
  </div>

  <div class="form-group">
    <label for="logged_date">
      Logged date
    </label>

    <input type="text" id="logged_date" name="logged_date" class="form-control">
  </div>

  <div class="form-group">
    <label for="phase_number">
      Phase number
    </label>

    <input type="text" id="phase_number" name="phase_number" class="form-control">
  </div>

  <div class="form-group">
    <label for="week_number">
      Week number
    </label>

    <input type="text" id="week_number" name="week_number" class="form-control">
  </div>

  <div class="form-group">
    <label for="day_number">
      Day number
    </label>

    <input type="text" id="day_number" name="day_number" class="form-control">
  </div>

  <div class="form-group">
    <label for="workout_focus">
      Workout focus
    </label>

    <input type="text" id="workout_focus" name="workout_focus" class="form-control">
  </div>

  <div class="form-group">
    <label for="sets_reps_array">
      Sets reps array
    </label>

    <input type="text" id="sets_reps_array" name="sets_reps_array" class="form-control">
  </div>

  <div class="form-group">
    <label for="resistance_array">
      Resistance array
    </label>

    <input type="text" id="resistance_array" name="resistance_array" class="form-control">
  </div>

  <div class="form-group">
    <label for="set_duration_array">
      Set duration array
    </label>

    <input type="text" id="set_duration_array" name="set_duration_array" class="form-control">
  </div>

  <div class="form-group">
    <label for="set_work_rest_array">
      Set work rest array
    </label>

    <input type="text" id="set_work_rest_array" name="set_work_rest_array" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create workout
  </button>
</form>

<hr>

<a href="/workouts">
  Go back
</a>
