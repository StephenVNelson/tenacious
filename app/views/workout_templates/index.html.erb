<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All workouts
    </h1>

    <a href="/workouts/new" class="btn btn-block btn-outline-secondary">
      Add a new workout
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Client
        </th>

        <th>
          Scheduled date
        </th>

        <th>
          Logged date
        </th>

        <th>
          Phase number
        </th>

        <th>
          Week number
        </th>

        <th>
          Day number
        </th>

        <th>
          Workout focus
        </th>

        <th>
          Sets reps array
        </th>

        <th>
          Resistance array
        </th>

        <th>
          Set duration array
        </th>

        <th>
          Set work rest array
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @workouts.each do |workout| %>
      <tr>
        <!-- Display workout.id start -->
        <td>
          <%= workout.id %>
        </td>
        <!-- Display workout.id end -->

        <!-- Display workout.user_id start -->
        <td>
          <%= workout.user.email %>
        </td>
        <!-- Display workout.user_id end -->

        <!-- Display workout.client_id start -->
        <td>
          <%= workout.client.name %>
        </td>
        <!-- Display workout.client_id end -->

        <!-- Display workout.scheduled_date start -->
        <td>
          <%= workout.scheduled_date %>
        </td>
        <!-- Display workout.scheduled_date end -->

        <!-- Display workout.logged_date start -->
        <td>
          <%= workout.logged_date %>
        </td>
        <!-- Display workout.logged_date end -->

        <!-- Display workout.phase_number start -->
        <td>
          <%= workout.phase_number %>
        </td>
        <!-- Display workout.phase_number end -->

        <!-- Display workout.week_number start -->
        <td>
          <%= workout.week_number %>
        </td>
        <!-- Display workout.week_number end -->

        <!-- Display workout.day_number start -->
        <td>
          <%= workout.day_number %>
        </td>
        <!-- Display workout.day_number end -->

        <!-- Display workout.workout_focus start -->
        <td>
          <%= workout.workout_focus %>
        </td>
        <!-- Display workout.workout_focus end -->

        <!-- Display workout.sets_reps_array start -->
        <td>
          <%= workout.sets_reps_array %>
        </td>
        <!-- Display workout.sets_reps_array end -->

        <!-- Display workout.resistance_array start -->
        <td>
          <%= workout.resistance_array %>
        </td>
        <!-- Display workout.resistance_array end -->

        <!-- Display workout.set_duration_array start -->
        <td>
          <%= workout.set_duration_array %>
        </td>
        <!-- Display workout.set_duration_array end -->

        <!-- Display workout.set_work_rest_array start -->
        <td>
          <%= workout.set_work_rest_array %>
        </td>
        <!-- Display workout.set_work_rest_array end -->

        <!-- Display workout.created_at start -->
        <td>
          <%= time_ago_in_words(workout.created_at) %> ago
        </td>
        <!-- Display workout.created_at end -->

        <!-- Display workout.updated_at start -->
        <td>
          <%= time_ago_in_words(workout.updated_at) %> ago
        </td>
        <!-- Display workout.updated_at end -->

        <td>
          <a href="/workouts/<%= workout.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @workouts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
