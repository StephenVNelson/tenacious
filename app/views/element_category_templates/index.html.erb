<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All element categories
    </h1>

    <a href="/element_categories/new" class="btn btn-block btn-outline-secondary">
      Add a new element category
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "element_category_templates/element_categories_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Category name
        </th>

        <th>
          Position number
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @element_categories.each do |element_category| %>
      <tr>
        <td>
          <%= element_category.id %>
        </td>

        <td>
          <%= element_category.category_name %>
        </td>

        <td>
          <%= element_category.position_number %>
        </td>

        <td>
          <%= time_ago_in_words(element_category.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(element_category.updated_at) %> ago
        </td>

        <td>
          <a href="/element_categories/<%= element_category.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @element_categories, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
