<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Category name
        </th>

        <th>
          Position number
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @element_categories.each do |element_category| %>
      <tr>
        <!-- Display element_category.id start -->
        <td>
          <%= element_category.id %>
        </td>
        <!-- Display element_category.id end -->

        <!-- Display element_category.category_name start -->
        <td>
          <%= element_category.category_name %>
        </td>
        <!-- Display element_category.category_name end -->

        <!-- Display element_category.position_number start -->
        <td>
          <%= element_category.position_number %>
        </td>
        <!-- Display element_category.position_number end -->

        <!-- Display element_category.created_at start -->
        <td>
          <%= time_ago_in_words(element_category.created_at) %> ago
        </td>
        <!-- Display element_category.created_at end -->

        <!-- Display element_category.updated_at start -->
        <td>
          <%= time_ago_in_words(element_category.updated_at) %> ago
        </td>
        <!-- Display element_category.updated_at end -->

        <td>
          <a href="/element_categories/<%= element_category.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
