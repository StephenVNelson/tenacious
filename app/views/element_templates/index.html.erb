<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All elements
    </h1>

    <a href="/elements/new" class="btn btn-block btn-outline-secondary">
      Add a new element
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @elements.each do |element| %>
      <tr>
        <!-- Display element.id start -->
        <td>
          <%= element.id %>
        </td>
        <!-- Display element.id end -->

        <!-- Display element.name start -->
        <td>
          <%= element.name %>
        </td>
        <!-- Display element.name end -->

        <!-- Display element.category_id start -->
        <td>
          <%= element.category_id %>
        </td>
        <!-- Display element.category_id end -->

        <!-- Display element.created_at start -->
        <td>
          <%= time_ago_in_words(element.created_at) %> ago
        </td>
        <!-- Display element.created_at end -->

        <!-- Display element.updated_at start -->
        <td>
          <%= time_ago_in_words(element.updated_at) %> ago
        </td>
        <!-- Display element.updated_at end -->

        <td>
          <a href="/elements/<%= element.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
