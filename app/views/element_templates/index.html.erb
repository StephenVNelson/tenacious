<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All elements
    </h1>

    <a href="/elements/new" class="btn btn-block btn-outline-secondary">
      Add a new element
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "element_templates/elements_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @elements.each do |element| %>
      <tr>
        <td>
          <%= element.id %>
        </td>

        <td>
          <%= element.name %>
        </td>

        <td>
          <% if element.category.present? %>
            <a href="/element_categories/<%= element.category.id %>">
              <%= element.category.category_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(element.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(element.updated_at) %> ago
        </td>

        <td>
          <a href="/elements/<%= element.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @elements, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
