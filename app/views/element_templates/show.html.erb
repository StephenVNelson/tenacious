<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Element #<%= @element.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/elements" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/elements/<%= @element.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit element
        </a>
      </div>

      <div class="col">
        <a href="/delete_element/<%= @element.id %>" class="btn btn-block btn-outline-secondary">
          Delete element
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @element.name %>
      </dd>

      <dt>
        Category
      </dt>
      <dd>
        <% if @element.category.present? %>
          <a href="/element_categories/<%= @element.category_id %>">
            <%= @element.category.category_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@element.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@element.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "element_templates/element_exercise_elements" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "element_templates/element_exercises" %>
  </div>
</div>
