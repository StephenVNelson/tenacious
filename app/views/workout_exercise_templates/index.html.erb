<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All workout exercises
    </h1>

    <a href="/workout_exercises/new" class="btn btn-block btn-outline-secondary">
      Add a new workout exercise
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "workout_exercise_templates/workout_exercises_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Workout
        </th>

        <th>
          Exercise
        </th>

        <th>
          Workout focus
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @workout_exercises.each do |workout_exercise| %>
      <tr>
        <!-- Display workout_exercise.id start -->
        <td>
          <%= workout_exercise.id %>
        </td>
        <!-- Display workout_exercise.id end -->

        <!-- Display workout_exercise.workout_id start -->
        <td>
          <% if workout_exercise.workout.present? %>
            <a href="/workouts/<%= workout_exercise.workout.id %>">
              <%= workout_exercise.workout.user_id %>
            </a>
          <% end %>
        </td>
        <!-- Display workout_exercise.workout_id end -->

        <!-- Display workout_exercise.exercise_id start -->
        <td>
          <% if workout_exercise.exercise.present? %>
            <a href="/exercises/<%= workout_exercise.exercise.id %>">
              <%= workout_exercise.exercise.right_left_bool %>
            </a>
          <% end %>
        </td>
        <!-- Display workout_exercise.exercise_id end -->

        <!-- Display workout_exercise.workout_focus start -->
        <td>
          <%= workout_exercise.workout_focus %>
        </td>
        <!-- Display workout_exercise.workout_focus end -->

        <!-- Display workout_exercise.created_at start -->
        <td>
          <%= time_ago_in_words(workout_exercise.created_at) %> ago
        </td>
        <!-- Display workout_exercise.created_at end -->

        <!-- Display workout_exercise.updated_at start -->
        <td>
          <%= time_ago_in_words(workout_exercise.updated_at) %> ago
        </td>
        <!-- Display workout_exercise.updated_at end -->

        <td>
          <a href="/workout_exercises/<%= workout_exercise.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @workout_exercises, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
