<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Exercise element #<%= @exercise_element.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/exercise_elements" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/exercise_elements/<%= @exercise_element.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit exercise element
        </a>
      </div>

      <div class="col">
        <a href="/delete_exercise_element/<%= @exercise_element.id %>" class="btn btn-block btn-outline-secondary">
          Delete exercise element
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Exercise
      </dt>
      <dd>
        <% if @exercise_element.exercise.present? %>
          <a href="/exercises/<%= @exercise_element.exercise_id %>">
            <%= @exercise_element.exercise.right_left_bool %>
          </a>
        <% end %>
      </dd>

      <dt>
        Element
      </dt>
      <dd>
        <% if @exercise_element.element.present? %>
          <a href="/elements/<%= @exercise_element.element_id %>">
            <%= @exercise_element.element.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@exercise_element.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@exercise_element.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

