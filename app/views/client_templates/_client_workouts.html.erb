<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Workouts

    <a data-toggle="collapse" href="#client_workouts_new_form">
      Add workout
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @client.workouts.each do |workout| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/workouts/<%= workout.id %>">
          <%= workout.user_id %>
        </a>

        <a href="/delete_workout_from_client/<%= workout.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="client_workouts_new_form">
        <%= render partial: "client_templates/client_workouts_new_form" %>
      </div>
    </div>

  </ul>
</div>
