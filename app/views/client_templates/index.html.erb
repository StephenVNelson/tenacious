<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All clients
    </h1>

    <a href="/clients/new" class="btn btn-block btn-outline-secondary">
      Add a new client
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Email
        </th>

        <th>
          Weekley commitment
        </th>

        <th>
          Phone
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @clients.each do |client| %>
      <tr>
        <!-- Display client.id start -->
        <td>
          <%= client.id %>
        </td>
        <!-- Display client.id end -->

        <!-- Display client.name start -->
        <td>
          <%= client.name %>
        </td>
        <!-- Display client.name end -->

        <!-- Display client.email start -->
        <td>
          <%= client.email %>
        </td>
        <!-- Display client.email end -->

        <!-- Display client.weekley_commitment start -->
        <td>
          <%= client.weekley_commitment %>
        </td>
        <!-- Display client.weekley_commitment end -->

        <!-- Display client.phone start -->
        <td>
          <%= client.phone %>
        </td>
        <!-- Display client.phone end -->

        <!-- Display client.created_at start -->
        <td>
          <%= time_ago_in_words(client.created_at) %> ago
        </td>
        <!-- Display client.created_at end -->

        <!-- Display client.updated_at start -->
        <td>
          <%= time_ago_in_words(client.updated_at) %> ago
        </td>
        <!-- Display client.updated_at end -->

        <td>
          <a href="/clients/<%= client.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
